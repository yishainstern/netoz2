@model CouponApplication.Models.User

@{
    ViewBag.Title = "UserSignUp";
}

<h2>SignUp</h2>
@using (Html.BeginForm("SignUp", "User"))
{
    <table>
        <tr>
            <td>@Html.LabelFor(model => model.PersonId)</td>
            <td>@Html.TextBoxFor(model => model.PersonId)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Name)</td>
            <td>@Html.TextBoxFor(model => model.Name)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Email)</td>
            <td>@Html.TextBoxFor(model => model.Email)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Password)</td>
            <td>@Html.PasswordFor(model => model.Password)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Age)</td>
            <td>@Html.TextBoxFor(model => model.Age)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.gender)</td>
            <td>@Html.TextBoxFor(model => model.gender)<text>(write 0 for male,1 for female)</text></td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Location)</td>
            <td>@Html.TextBoxFor(model => model.Location)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.Phone)</td>
            <td>@Html.TextBoxFor(model => model.Phone)</td>
        </tr>
        <tr>
            <td><input type="submit" value="AddFavoriteCategory" /></td>
        </tr>
    </table>

    if (!ViewData.ModelState.IsValid)
    {
        if (ViewData.ModelState["Empty"] != null && ViewData.ModelState["Empty"].Errors.Count != 0)
        {
            <h4>@ViewData.ModelState["Empty"].Errors[0].ErrorMessage</h4>
        }
        if (ViewData.ModelState["Email"] != null && ViewData.ModelState["Email"].Errors.Count != 0)
        {
            <h4> @ViewData.ModelState["Email"].Errors[0].ErrorMessage </h4>
        }
        if (ViewData.ModelState["Exist"] != null && ViewData.ModelState["Exist"].Errors.Count != 0)
        {
            <h4> @ViewData.ModelState["Exist"].Errors[0].ErrorMessage </h4>
        }
    }
}