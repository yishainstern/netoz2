@model CouponApplication.Models.UseCopun
<h2>Order</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Code)
            @Html.ValidationMessageFor(model => model.Code)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.OrderDay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderDay)
            @Html.ValidationMessageFor(model => model.OrderDay)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.rank)-(1-5)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.rank)
            @Html.ValidationMessageFor(model => model.rank)
        </div>
        <div class="editor-label">
            @Html.Label("Credit Card")
        </div>
        <div class="editor-field">
            @Html.TextBox("SearchText")
        </div>
        <p>
            <input type="submit" value="Order" />
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}